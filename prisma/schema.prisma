generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  DOCTOR
}

model User {
  id               Int      @id @default(autoincrement())
  uuid             String   @default(uuid()) @unique @db.Char(36)
  firstName        String
  lastName         String
  phoneNumber      String
  phoneCode        String
  email            String   @unique
  password         String
  role             Int      @default(1)    // 1 = USER, 2 = DOCTOR
  bmdcNumber       String?  @unique
  isVerified       Boolean  @default(false)
  isDoctorVerified Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
